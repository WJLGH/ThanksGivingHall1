<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="类别" />

                    <Spinner
                        android:id="@+id/sp_fin_record_add_re_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/reType"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/et_fin_record_add_amount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:hint="请输入金额"
                    android:inputType="numberDecimal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="部门" />


                <Spinner
                    android:id="@+id/sp_fin_record_add_dept"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/dept"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易类型" />


            <Spinner
                android:id="@+id/sp_fin_record_add_bus_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="摘要" />

            <EditText
                android:id="@+id/et_fin_record_add_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_fin_record_add_out_ac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出账账户" />

            <Spinner
                android:id="@+id/sp_fin_record_add_out_ac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_fin_record_add_in_ac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="入账账户" />

            <Spinner
                android:id="@+id/sp_fin_record_add_in_ac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间" />

            <DatePicker
                android:id="@+id/dp_fin_record_add_note_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"
                android:spinnersShown="true"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_fin_record_add_submit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/check_select"
                    android:text="提交"
                    android:textColor="@color/checkupdatelibrary_no_update_button" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
